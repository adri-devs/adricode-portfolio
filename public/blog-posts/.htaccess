# Denegar acceso directo a archivos .md
<FilesMatch "\.md$">
    Require all denied
</FilesMatch>

# Permitir acceso a im치genes
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
    Require all granted
    
    # Headers de cache para im치genes
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=31536000"
    </IfModule>
</FilesMatch>

# Denegar acceso a todo lo dem치s por defecto
<FilesMatch ".*">
    Require all denied
</FilesMatch>

# Las reglas de arriba sobrescriben esta para las im치genes
Options -Indexes
